<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextFirstNum"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#FFB0B0"
        android:cursorVisible="true"
        android:ems="30"
        android:hint="@string/first_num_hint"
        android:inputType="numberDecimal"
        android:shadowColor="#698FFF"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#FF4D86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextSecondNum"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="92dp"
        android:ems="30"
        android:hint="@string/second_num_hint"
        android:inputType="numberDecimal"
        android:shadowColor="#698FFF"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#FF4D86"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="456dp"
        android:text="@string/answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>